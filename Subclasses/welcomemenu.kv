<WelcomeMessage>:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'
        Label:
            id: welcomeMessage
            text: 'Welcome to the Goat House \n\n     Please press Doorbell'
            font_size: 50


<InitialMenu>:
    #name: 'InitialMenu'
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
            Label:
                id: welcomeMessage
                text: 'Welcome to Smart Doorbell'
                font_size: 50

            Button:
                text: 'Alert Someone'
                on_release: root.manager.current = 'Alert'

            Button:
                text: 'Keypad'
                on_press: root.manager.current = 'Keypad'

            Button:
                text: 'RFID'
                on_press: root.manager.current = 'RFID'

            Button:
                text: 'Facial Recognition'
                on_press: root.manager.current = 'FaceRecog'


<AlertSomeoneScreen>:

    on_enter: root.Push()
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Please look at the camera'
                font_size: 50
            Image:
                source: 'facescan.gif'
                anim_loop: 1

<RFIDScreen>:
    # Resets the screen background and text
    on_pre_enter: root.textReset()
    # Runs the decision making process
    on_enter: root.Decision()

    the_text: RFIDtext

    BoxLayout:
        orientation: 'vertical'
        # Canvas is the background square.
        canvas.before:
            Color:
                rgba: root.red, root.green, 0, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size

        # Text is here.
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: RFIDtext
                #To set default text check main textReset functions
                text: ""
                font_size: 50

<KeypadScreen>:
    # Resets the screen background and text
    on_pre_enter: root.textReset()
    # Runs the decision making process
    on_enter: root.Decision()

    the_text: keypadtext
    the_pin: keypadPin

    BoxLayout:
        orientation: 'vertical'
        # Canvas is the background square.
        canvas.before:
            Color:
                rgba: root.red, root.green, 0, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size

        # Text is here.
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: keypadtext
                #To set default text check main textReset functions
                text: ""
                font_size: 50
            Label:
                id: keypadPin
                #To set default text check main textReset functions
                text: ""
                font_size: 50
